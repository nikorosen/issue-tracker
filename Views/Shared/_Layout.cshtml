<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"] - Issue Tracker</title>

    <!-- Custom fonts for this template-->
    <link href="~/lib/bootstrap/sb-admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/lib/bootstrap/sb-admin/css/sb-admin-2.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-area="" asp-controller="Issues" asp-action="Index">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Issue Tracker </div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Projects -->
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Projects" asp-action="Index"><i class="fas fa-book-open"></i> Projects</a>
            </li>

                    <!-- Divider -->
         <hr class="sidebar-divider my-0">
            

         <!-- Nav Item - Project List -->
            @{
                    @await Component.InvokeAsync("ProjectList");
                }

                            <!-- Divider -->
         <hr class="sidebar-divider my-0">

                     <!-- Nav Item - Issues -->
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Projects" asp-action="Create"><i class="fas fa-plus-circle"></i> Create New Project</a>
            </li>

                       <!-- Divider -->
         <hr class="sidebar-divider my-0">


        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

        

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                       <li><partial name="_LoginPartial" /> </li> 

                    </ul>
                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                   <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Nickolas Rosenberg 2022</span>
                    </div>
                </div>
            </footer>

            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->


    <!-- Bootstrap core JavaScript-->
    <script src="~/lib/bootstrap/sb-admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/sb-admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/lib/bootstrap/sb-admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/lib/bootstrap/sb-admin/js/sb-admin-2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>